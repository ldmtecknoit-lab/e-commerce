<?xml version="1.0" encoding="UTF-8"?>
{% if not user %}
<Window type="{% if not model %}root{% else %}inner{% endif %}" title="Colosso - App">
    <Text>{{model}}</Text>
    <Column expand="full">
        {% block main %}
        {% endblock %}
    </Column>
</Window>
{% else %}
<Window type="root">
    <Text>{{model}}</Text>
    <View route="/dashboard" />
</Window>
{% endif %}