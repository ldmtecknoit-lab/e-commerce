{% extends "sidebar.xml" %}
{% block bar %}
<Action route="/home"><Media type="icon" src="bi-pc-horizontal"/> <Text>Machines</Text></Action>
<Action route="/home"><Media type="icon" src="bi-box-seam"/> <Text>Containers</Text></Action>
<Action route="/home"><Media type="icon" src="bi-boxes"/> <Text>Services</Text></Action>
<Action route="/home"><Media type="icon" src="bi-bookmarks"/> <Text>Repositories</Text></Action>
<Action route="/home"><Media type="icon" src="bi-database"/> <Text>Volumes</Text></Action>
<Action route="/home"><Media type="icon" src="bi-globe"/> <Text>Domains</Text></Action>
{% endblock %}
{% block title %}Domain {% endblock %}
{% block subtitle %}Details and information about the domain #{{url.path[-1]}}. {{url}}{% endblock %}
{% block content %}
<Media height="1000px" type="embed" src="https://www.youtube.com/embed/tujkoXI8rWM?si=7OFG-u-przarv7KE" />
<Media width="500px" height="500px" type="video" src="https://www.w3schools.com/html/mov_bbb.mp4" controls="" autoplay="" />
<Text type="code">print("Hello, World!")</Text>
<Action width="100px" type="button" ><Media width="100px" type="image" src="https://img.animeunity.so/anime/bx143598-FCvAhQJLllSP.png" /></Action>
<Action type="form" action="/auth/login" >
    <Input type="text" name="username" placeholder="Username" />
    <Input type="password" name="password" placeholder="Password" />
    <Action type="submit" ><Text>Login</Text></Action>
</Action>

<Input type="select" name="gender" placeholder="gender" >
    <Text>Maschio</Text>
    <Text>Femmina</Text>
</Input>
<!-- <Window width="1980px" height="1080px" src="https://web.archive.org" /> -->
<Message type="success" mode="alert" title="Alert" >
    <Text>This is an alert message.</Text>
</Message>
<Group>
    <Input type="text" name="name" placeholder="name" />
    <Input type="text" name="surname" placeholder="surname" />
</Group>
<Group type="list">
    <Text>Item 1</Text>
    <Text>Item 2</Text>
    <Text>Item 3</Text>
</Group>
<Group type="card">
    <Card>
        <Media width="100px" height="100px" type="image" src="https://img.animeunity.so/anime/bx143598-FCvAhQJLllSP.png" />
        <Text>Card 1</Text>
    </Card>
    <Card>
        <Media width="100px" height="100px" type="image" src="https://img.animeunity.so/anime/bx143598-FCvAhQJLllSP.png" />
        <Text>Card 2</Text>
    </Card>
    <Card>
        <Media width="100px" height="100px" type="image" src="https://img.animeunity.so/anime/bx143598-FCvAhQJLllSP.png" />
        <Text>Card 3</Text>
    </Card>
</Group>
<Media type="carousel" width="500px" height="500px">
    <Media type="image" src="https://img.animeunity.so/anime/bx143598-FCvAhQJLllSP.png" />
    <Media type="image" src="https://img.animeunity.so/anime/bx143598-FCvAhQJLllSP.png" />
    <Media type="image" src="https://img.animeunity.so/anime/bx143598-FCvAhQJLllSP.png" />
</Media>
<Data type="text" >
    <Text>This is a text data element.</Text>
</Data>
<Action type="link" route="#offcanvasExample"><Text>Offcanvas</Text></Action>
<Action type="link" route="#dialogExample"><Text>Dialog</Text></Action>
<Window type="still" id="offcanvasExample">
    <Text>This is an offcanvas window.</Text>
    <Action type="button" ><Text>Close</Text></Action>
</Window>
<Window type="dialog" id="dialogExample">
    <Text>This is an offcanvas window.</Text>
    <Action type="button" ><Text>Close</Text></Action>
</Window>

<Data type="table">
    <Data type="table.header">
        <Data type="table.cell">
            <Text>Header 1</Text>
        </Data>
        <Data type="table.cell">
            <Text>Header 2</Text>
        </Data>
        <Data type="table.cell">
            <Text>Header 3</Text>
        </Data>
    </Data>
    <Data type="table.body">
        <Data type="table.row">
            <Text>Cell 1</Text>
            <Text>Cell 2</Text>
            <Text>Cell 3</Text>
        </Data>
        <Data type="table.row">
            <Text>Cell 1</Text>
            <Text>Cell 2</Text>
            <Text>Cell 3</Text>
        </Data>
        <Data type="table.row">
            <Text>Cell 1</Text>
            <Text>Cell 2</Text>
            <Text>Cell 3</Text>
        </Data>
    </Data>
</Data>
{% endblock %}