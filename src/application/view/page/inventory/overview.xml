{% extends "sidebar.xml" %}
{% set name = url.path[-1].capitalize() %}
{% block title %}Overview{% endblock %}
{% block subtitle %}Keep track of your inventory {{name}}{% endblock %}
{% block bar %}
<SideBar from="{{url.path[0]}}" selected="{{'/'.join(url.path)}}" />
{% endblock %}
{% block breadcrumb %}
<Action type="link" route="/{{url.path[0]}}"  ><Media type="icon" src="bi-speedometer2"/></Action>
<Action route="application/view/page/inventory/repositories.xml" ><Media type="icon" src="bi-bookmarks-fill"/><Text>{{name}}</Text></Action>
{% endblock %}
{% block action %}
<Action route="#dialogCall"><Media type="icon" src="bi-truck" /><Text>Shipping</Text></Action>
<Action route="#dialogCall"><Media type="icon" src="bi-cash-coin" /><Text>Cash</Text></Action>
<Window type="dialog" id="dialogCall" expand="full" title="Cash Register">
    <Cash/>
</Window>
<Window type="dialog" id="dialogCart" size="xl" title="Catalog" class="border">
        <Storekeeper id="okkkkkkkkkkkk" repository="products">
            <Grid row="4" view="card/product.xml" />
        </Storekeeper>
    </Window>
{% endblock %}
{% block content %}
<Container class="border-top border-bottom bg-body-secondary py-2 m-0">
    <Storekeeper repository="products">
        <Table id="table_{{name}}">
            <Data type="table.cell">
                <Text>Header 1</Text>
            </Data>
            <Data type="table.cell">
                <Text>Header 2</Text>
            </Data>
            <Data type="table.cell">
                <Text>33333</Text>
            </Data>
        </Table>
    </Storekeeper>
</Container>
{% endblock %}