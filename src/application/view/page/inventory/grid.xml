{% extends "sidebar.xml" %}
{% block title %}Domain {% endblock %}
{% block subtitle %}Details and information about the domain #{{url.path[-1]}}.{% endblock %}
{% block bar %}
<SideBar from="{{url.path[0]}}" selected="{{'/'.join(url.path)}}" />
{% endblock %}
{% block action %}
<Action route="#dialogCall"><Media type="icon" src="bi-bell" /><Text>Subscribe</Text></Action>
<Window type="dialog" id="dialogCall">
    <Text>This is an offcanvas window.</Text>
    <Action type="button" ><Text>Close</Text></Action>
</Window>
{% endblock %}
{% block content %}
<Storekeeper id="okkkkkkkkkkkk" repository="means">
    <Grid row="4" view="card/media.xml" />
</Storekeeper>
{% endblock %}